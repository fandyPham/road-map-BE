{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"],
        "install": ["yarn install", "yarn build", "npx prisma generate"],
        "build": {
          "env": {
            "PRISMA_GENERATE": "npx prisma generate"
          }
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.js"
    }
  ],
  "build": {
    "env": {
      "PRISMA_GENERATE": "npx prisma generate"
    }
  },
  "env": {
    "PRISMA_GENERATE": "npx prisma generate"
  }
}
